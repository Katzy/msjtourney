<% modal ||= false %>
<% remote = modal ? true : false %>
  <%= form_for([@team, @tournament], remote: remote, html: { role: :form, 'data-model' => 'tournament'}) do |f| %>
    <% if @tournament.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

        <ul>
        <% @tournament.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="form-group">
        <%= f.label :tournament_name, class: 'col-sm-4 control-label' %>
