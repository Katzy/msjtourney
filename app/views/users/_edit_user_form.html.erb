<div class="border-form-div">

  <h3>Edit Team log in & contact information</h3>

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email, "Email (username)" %><br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>


    <div class="field">
      <%= f.label :school %><br>
      <%= f.text_field :school, :readonly => true %>
    </div>

    <% if current_user.admin? %>
    <div class="field">
      <%= f.label :abbreviation %><br>
      <%= f.text_field :abbreviation %>
    </div>


      <div class="field">
        <%= f.label :section %><br>
        <%= f.collection_select :section, ['C', 'CCS', 'LA', 'N', 'NCS', 'O', 'S', 'SD', 'SF', 'SJ', 'OTHER'], :to_s, :to_s, include_blank: true %>
      </div><br>
    <% end %>

    <div class="field">
      <%= f.label :cell, "Phone #" %><br>
      <%= f.text_field :cell %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>