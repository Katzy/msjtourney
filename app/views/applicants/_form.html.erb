<div class="border-wrestler-div">
  <% modal ||= false %>
  <% remote = modal ? true : false %>
    <%= form_for([@applicant], remote: remote, html: { role: :form, 'data-model' => 'applicant'}) do |f| %>
      <% if @applicant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@applicant.errors.count, "error") %> prohibited this application from being saved:</h2>

          <ul>
          <% @applicant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
          <div class="form-group">
            <%= f.label :school, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_field :school, class: 'form-control' %><br>
            </div>

          </div>
        </div>


      <div class="row">
        <div class="form-group">
         <%= f.label :city, class: 'col-sm-2 control-label' %>
            <div class="col-sm-6">
              <%= f.text_field :city, class: 'form-control' %><br>
            </div>
         <%= f.label :state, class: 'col-sm-2 control-label' %>
           <div class="col-sm-2">
             <%= f.text_field :state, class: 'form-control' %><br>
           </div>
        </div>
      </div>

    <div class="row">
        <div class="form-group">
        <%= f.label :coach, "Head Coach", class: 'col-sm-2 control-label' %>
          <div class="col-sm-4">
            <%= f.text_field :coach, class: 'form-control' %><br>
          </div>
          <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class="col-sm-4">
            <%= f.text_field :email, class: 'form-control' %><br>
          </div>
          <%= f.label :best_phone, "Best # to reach you", class: 'col-sm-6 control-label' %>
          <div class="col-sm-6">
            <%= f.text_field :best_phone, class: 'form-control' %><br>
          </div>
        </div>
      </div>

     <div class="row">
        <div class="form-group">
          <%= f.label :full_team_entry, class: 'col-sm-4 control-label' %>
          <div class="col-sm-2">
            <%= f.check_box :full_team_entry, class: 'form-control' %><br>
          </div>
          $425 by Dec 1<br> $450 by Jan 1<br>$500 AFTER Jan 1<br><br>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <%= f.label :individual_entry, class: 'col-sm-4 control-label' %>
          <div class="col-sm-2">
            <%= f.check_box :individual_entry, class: 'form-control' %><br>
          </div>
          $40 / wrestler by Dec 1<br> $50 by Jan 1<br>$60 AFTER Jan 1<br><br>
          <%= f.label :number_of_wrestlers, class: 'col-sm-4 control-label' %>
          <div class="col-sm-2">
            <%= f.text_field :number_of_wrestlers, class: 'form-control' %><br>
          </div>
        </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div><br>
     <br><br>
    <% end %>
  </div>
