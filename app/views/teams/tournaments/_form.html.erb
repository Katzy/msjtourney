        </div>
        <%= f.label :field_size, class: 'col-sm-2 control-label' %>
        <div class="col-sm-2">
          <%= f.text_field :size, class: 'form-control' %><br>
        </div>
      </div>
    </div>

     <div class="form-actions">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
