<div class="team-name">
  <% if current_user.admin? || current_user.id == @user.id %>
    <h3><button type="button" class="btn-large btn-default"><%= link_to 'CLICK TO INPUT 2014-15 TOURNAMENTS ENTERED', '#new_user_tournament_modal', 'data-toggle' => 'modal' %></button></h3>
  <% end %>

</div>
<div class="container-tournament" ng-view="">
  <div class="row">
    <div class="panel ">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="tournaments_table">

    <thead>
      <tr>
        <th>#</th>
        <th>Tournament Name</th>
        <% if current_user.admin? %>
        <th></th>
        <th></th>
      <% end %>
      </tr>
    </thead>
    <tbody>
      <% @tournaments.each do |tournament, user| %>
        <%= render partial: 'users/tournaments/table_row', locals: { tournament: tournament, user: user } %>
      <% end %>
    </tbody>
  </table>
  <div class="new-tourney-button">
    <% if @tournaments.count > 0 %>
      <h3><button type="button" class="btn btn-default"><%= link_to 'ADD ANOTHER TOURNAMENT', '#new_user_tournament_modal', 'data-toggle' => 'modal' %></button></h3>
    <% end %>
  </div>

  <div class="add_wrestler_button">
    <div class="modal fade" id="new_user_tournament_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">ENTER TOURNAMENT FROM YOUR 2014-15 SCHEDULE</h4>
          </div>
          <div class="modal-body">
            <%= render 'users/tournaments/form', modal: true %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>